{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug"
    },
    "Enrich": [
      "FromLogContext",
      "WithThreadId"
    ],
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Console",
              "Args": {
                "Theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Literate, Serilog.Sinks.Console",
                "OutputTemplate": "[{Timestamp:HH:mm:ss.fff} {Level:u3}] (ThreadId) {SourceContext}{NewLine}{Message}{NewLine}{Exception}"
              }
            }
          ]
        }
      }
    ]
  }
}
